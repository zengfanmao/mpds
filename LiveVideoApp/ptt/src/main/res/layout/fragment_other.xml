<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fragment_bg">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/login_btn_selector"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingDraftButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="#00ff00"
        android:src="@mipmap/u473"
        android:visibility="gone"/>

    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingActionButton_liveness"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/u214"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp" />

    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingDraftButton2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/u214"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp" />

    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingDraftButton3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/u214"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini"
        app:pressedTranslationZ="12dp" />

    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingDraftButton4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/u214"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:pressedTranslationZ="12dp"
        app:fabSize="mini"
        android:visibility="invisible"
        />

    <com.aimissu.ptt.view.FloatingDraftButton
        android:id="@+id/floatingDraftButton5"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/u214"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:elevation="6dp"
        app:borderWidth="0dp"
        app:pressedTranslationZ="12dp"
        app:fabSize="mini"
        android:visibility="invisible"
        />

</FrameLayout>