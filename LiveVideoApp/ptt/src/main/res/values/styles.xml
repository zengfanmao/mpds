<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_focus</item>
        <item name="android:textColorPrimary">@color/common_focus</item>
    </style>
    <style name="waitingDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_launcher</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>
    <style name="XqcToolbarTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ivItemBg" >
        <item name="android:background">@drawable/item_bg_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimList">
        <item name="android:windowEnterAnimation">@anim/list_pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/list_pop_hidden_anim</item>

    </style>
    <style name="ChatMessageInfo">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ChatHeaderTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="aurora_msgitem_receive_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="aurora_msgitem_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="aurora_msgitem_receiver_display_name_style">
        <item name="android:ems">15</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="aurora_msgitem_sender_display_name_style">
        <item name="android:ems">15</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="aurora_msgitem_send_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="aurora_msgitem_receiver_avatar_style">
        <item name="android:layout_width">@dimen/aurora_width_msg_avatar</item>
        <item name="android:layout_height">@dimen/aurora_height_msg_avatar</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="aurora_msgitem_sender_avatar_style">
        <item name="android:layout_width">@dimen/aurora_width_msg_avatar</item>
        <item name="android:layout_height">@dimen/aurora_height_msg_avatar</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="aurora_msgitem_msg_txt_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ChatHeaderLayout">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MyEditText" >
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">#d2055757</item>
    </style>
    <style name="Theme_AudioDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>

</resources>
