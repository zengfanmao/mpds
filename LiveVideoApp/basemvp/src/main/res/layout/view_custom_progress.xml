<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/progress_custom_bg"
    android:padding="5dp">

    <com.aimissu.basemvp.view.ProgressWheel
        android:id="@+id/progressbar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        wheel:barColor="@color/confirm_top_bg"
        wheel:fillRadius="false"
        wheel:progressIndeterminate="true" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="160dp"
        android:minWidth="90dp"
        android:singleLine="true"
        android:text="@string/loading_msg_wait"
        android:textColor="@color/c_b3b3b3"
        android:textSize="14sp" />

</RelativeLayout>