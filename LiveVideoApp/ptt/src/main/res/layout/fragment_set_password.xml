<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fragment_bg"
    android:orientation="vertical">

    <include layout="@layout/fragment_title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"

        android:background="@drawable/item_blue_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <TextView
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="旧密码"
            android:textColor="@color/white" />

        <EditText

            android:password="true"
            android:id="@+id/et_oldPwd"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:background="@drawable/input_white_selector"
            android:gravity="right|center"
            android:hint="请输入旧密码"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/c_acacac"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"

        android:background="@drawable/item_blue_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <TextView
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="新密码"
            android:textColor="@color/white" />

        <EditText
            android:password="true"
            android:id="@+id/et_newPwd"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:background="@drawable/input_white_selector"
            android:gravity="right|center"
            android:hint="请输入新密码"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/c_acacac"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"

        android:background="@drawable/item_blue_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding">

        <TextView
            android:layout_width="58dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="确认密码"
            android:textColor="@color/white" />

        <EditText
            android:password="true"
            android:id="@+id/et_confirmPwd"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding"
            android:background="@drawable/input_white_selector"
            android:gravity="right|center"
            android:hint="请输入新密码"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/c_acacac"
            android:textSize="14sp" />

    </LinearLayout>
    <Button
        android:layout_gravity="bottom"
        android:background="@drawable/login_btn_selector"
        android:layout_marginTop="@dimen/common_padding"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="保存" />
</LinearLayout>