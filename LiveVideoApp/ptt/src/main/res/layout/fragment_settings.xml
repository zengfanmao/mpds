<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fragment_bg"
    android:orientation="vertical">

    <include layout="@layout/fragment_title_bar" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@drawable/item_blue_selector"
        android:clickable="true"
        android:padding="@dimen/common_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:drawableRight="@mipmap/setting_pwd_right_arrow"
            android:text="设置"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@drawable/item_blue_selector"
        android:clickable="true"
        android:padding="@dimen/common_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:drawableRight="@mipmap/setting_pwd_right_arrow"
            android:text=""
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setting_ruler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@drawable/item_blue_selector"
        android:clickable="true"
        android:padding="@dimen/common_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置白名单"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:drawableRight="@mipmap/setting_pwd_right_arrow"
            android:text=""
            android:textColor="@color/white" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@drawable/item_blue_selector"
        android:clickable="true"
        android:padding="@dimen/common_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="是否上传IM日志"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_log_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:text="已开启"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>