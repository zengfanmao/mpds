<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_chat_input_More_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="visible"
    android:background="#aaffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/li_picker_photo"
        android:clickable="true"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="5dp"
            android:src="@drawable/chat_tool_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="相册"
            android:textColor="#7A7E83"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_picker_takephoto"
        android:clickable="true"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="5dp"
            android:src="@drawable/chat_tool_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拍摄"
            android:textColor="#7A7E83"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_video"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/li_picker_video"
            android:clickable="true"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="5dp"
            android:src="@drawable/video_call_btn_selector" />

        <TextView
            android:id="@+id/li_picker_video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="视频通话"
            android:textColor="#7A7E83"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_picker_file"
        android:clickable="true"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="5dp"
            android:src="@drawable/ao3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文件"
            android:textColor="#7A7E83"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_picker_location"
        android:clickable="true"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="5dp"
            android:src="@drawable/chat_tool_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="位置"
            android:textColor="#7A7E83"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
