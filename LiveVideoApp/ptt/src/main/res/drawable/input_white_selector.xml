<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transplant" />
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/white_border" />
            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip" />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transplant" />
            <stroke android:width="1dip" android:color="@color/white_border" />
            <corners android:radius="5dip" />
            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transplant" />
            <stroke android:width="1dip" android:color="@color/common_focus_press" />
            <corners android:radius="5dip" />
            <padding android:bottom="1dip" android:left="1dip" android:right="1dip" android:top="1dip" />

        </shape>
    </item>

</selector>
